// Zed settings
{
    "helix_mode": false,
    "disable_ai": true, //nice option :)
    "tab_size": 4,
    "auto_update": true,
    "base_keymap": "VSCode",
    "ui_font_size": 16,
    "buffer_font_size": 14,
    "soft_wrap": "preferred_line_length",
    "preferred_line_length": 100,
    "use_system_path_prompts": false,
    "use_system_prompts": false,
    "show_completions_on_input": true,
    "auto_signature_help": true,
    "show_signature_help_after_edits": true,
    "vim_mode": false,
    "confirm_quit": true,
    "show_whitespaces": "selection",
    "file_finder": {
        "modal_max_width": "large"
    },
    "vim": {
        "toggle_relative_line_numbers": true,
        "default_mode": "normal",
        "use_system_clipboard": "on_yank"
    },
    "active_pane_modifiers": {
        "inactive_opacity": 0.95,
        "border_size": 3
    },
    "scrollbar": {
        "show": "always"
    },
    "tabs": {
        "git_status": true,
        "file_icons": true,
        "show_diagnostics": "all"
    },
    "indent_guides": {
        "enabled": true,
        "coloring": "indent_aware",
        "background_coloring": "indent_aware"
    },
    "centered_layout": {
        "left_padding": 0.1,
        "right_padding": 0.1
    },
    "inlay_hints": {
        "enabled": false,
        "show_background": true,
        "toggle_on_modifiers_press": {
            "alt": true
        }
    },
    "edit_predictions": {
        "mode": "subtle",
        "enabled_in_text_threads": true
    },
    "features": {
        "edit_prediction_provider": "zed"
    },
    "calls": {
        "mute_on_join": true,
        "share_on_join": false
    },
    "preview_tabs": {
        "enabled": true
    },
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },
    "diagnostics": {
        "include_warnings": true,
        "inline": {
            "enabled": true
        }
    },
    "lsp": {
        "rust-analyzer": {
            "initialization_options": {
                "checkOnSave": true,
                "check": { "command": "clippy" }
            }
        }
    },
    "languages": {
        "Rust": {
            "inlay_hints": {
                "enabled": true
            },
            "format_on_save": "on"
        }
    }
}
